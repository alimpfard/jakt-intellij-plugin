<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.serenityos.jakt</id>
    <name>Jakt</name>
    <vendor>SerenityOS</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Jakt file"
                implementationClass="org.serenityos.jakt.plugin.JaktFile$FileType"
                fieldName="INSTANCE"
                language="Jakt"
                extensions="jakt"
        />
        <lang.parserDefinition
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.syntax.JaktParserDefinition"
        />
        <lang.syntaxHighlighterFactory
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.syntax.JaktSyntaxHighlighterFactory"
        />
        <lang.commenter
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.JaktCommenter"
        />
        <lang.namesValidator
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.JaktNamesValidator"
        />
        <lang.findUsagesProvider
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.JaktFindUsagesProvider"
        />
        <lang.refactoringSupport
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.JaktRefactoringSupportProvider"
        />
        <colorSettingsPage
                implementation="org.serenityos.jakt.plugin.syntax.JaktColorSettingsPage"
        />
        <annotator
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.annotations.JaktAnnotator$Impl"
        />
        <externalAnnotator
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.annotations.JaktExternalAnnotator"
        />
        <completion.contributor
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.completions.JaktCompletionContributor"
        />
        <lang.braceMatcher
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.JaktBraceMatcher"
        />
        <lang.foldingBuilder
                language="Jakt"
                implementationClass="org.serenityos.jakt.plugin.JaktFoldingBuilder"
        />
        <typeDeclarationProvider
                implementation="org.serenityos.jakt.plugin.JaktTypeDeclarationProvider"
        />
        <projectService
                serviceInterface="org.serenityos.jakt.plugin.project.JaktProjectService"
                serviceImplementation="org.serenityos.jakt.plugin.project.JaktProjectServiceImpl"
        />

        <intentionAction>
            <className>org.serenityos.jakt.plugin.intentions.ClassToStructKeywordIntention</className>
            <category>Jakt</category>
        </intentionAction>
        <intentionAction>
            <className>org.serenityos.jakt.plugin.intentions.StructToClassKeywordIntention</className>
            <category>Jakt</category>
        </intentionAction>
    </extensions>
</idea-plugin>
