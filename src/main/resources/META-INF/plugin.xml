<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.serenityos.jakt</id>
    <name>Jakt</name>
    <vendor>SerenityOS</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Jakt file"
                implementationClass="org.serenityos.jakt.plugin.JaktFile$Type"
                fieldName="INSTANCE"
                language="Jakt"
                extensions="jakt"
        />
        <lang.parserDefinition
            language="Jakt"
            implementationClass="org.serenityos.jakt.plugin.JaktParserDefinition"
        />
        <lang.syntaxHighlighterFactory
            language="Jakt"
            implementationClass="org.serenityos.jakt.plugin.JaktSyntaxHighlighterFactory"
        />
        <colorSettingsPage
            implementation="org.serenityos.jakt.plugin.JaktColorSettingsPage"
        />
        <annotator
            language="Jakt"
            implementationClass="org.serenityos.jakt.plugin.annotations.JaktAnnotator$Impl"
        />
        <externalAnnotator
            language="Jakt"
            implementationClass="org.serenityos.jakt.plugin.annotations.JaktExternalAnnotator"
        />
    </extensions>
</idea-plugin>
